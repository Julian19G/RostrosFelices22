@page
@model RostrosFelices.Pages.Servicios.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Servicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Servicio.Id" />
            <div class="form-group">
                <label asp-for="Servicio.Name" class="control-label"></label>
                <input asp-for="Servicio.Name" class="form-control" />
                <span asp-validation-for="Servicio.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicio.Empleado" class="control-label"></label>
                <input asp-for="Servicio.Empleado" class="form-control" />
                <span asp-validation-for="Servicio.Empleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicio.ClienteId" class="control-label"></label>
                <input asp-for="Servicio.ClienteId" class="form-control" />
                <span asp-validation-for="Servicio.ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicio.Fecha" class="control-label"></label>
                <input asp-for="Servicio.Fecha" class="form-control" />
                <span asp-validation-for="Servicio.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}